abbr "abe"="vim ~/.config/zsh-abbr/user-abbreviations"
abbr "ai"="sudo apt install"
abbr "au"="sudo apt update && sudo apt upgrade"
abbr "cp"="cp -i"
abbr "gcm"="git commit -m \"%\""
abbr "l"="eza"
abbr "la"="eza -a"
abbr "ll"="eza -l"
abbr "lla"="eza -la"
abbr "mv"="mv -i"
abbr "reload"="exec /bin/zsh -l"
abbr "rm"="rm -i"
abbr "t"="[ -z \$TMUX ] && ( tmux attach || tmux )"
